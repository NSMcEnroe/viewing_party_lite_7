<br><%= button_to "Discover Movies", user_discover_index_path, method: :get, data: { turbo: false } %> 

<h1> Movie Results </h1>
<% @facade.movies.each do |movie| %>
  <ul class="movie">
  <li class="title"><%= link_to movie.original_title, user_movie_path(id: movie.movie_id) %></li>
  <li class="average"><%= movie.vote_average %></li>
</ul>
<% end %>
